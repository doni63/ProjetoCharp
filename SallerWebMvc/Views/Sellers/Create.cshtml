@model SallerWebMvc.Models.ViewModels.SellerFormViewModel
@{
    ViewData["Title"] = "Create";
}
<style>
    .btn-line-break {
        display: block; /* Isso fará o botão aparecer em sua própria linha */
        margin-top: 95%; /* Adiciona um pouco de espaço acima do botão, se necessário */
    }
</style>

<h1>@ViewData["Title"]</h1>
<h4>Seller</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-range">
                <label asp-for="Seller.Name" class="form-label"></label>
                <input asp-for="Seller.Name" class="form-control" />
                <label asp-for="Seller.Email" class="form-label"></label>
                <input asp-for="Seller.Email" class="form-control" />
                <label asp-for="Seller.BirthDate" class="form-label"></label>
                <input asp-for="Seller.BirthDate" class="form-control" />
                <label asp-for="Seller.Salary" class="form-label"></label>
                <input asp-for="Seller.Salary" class="form-control" />
                <div class="form-group">
                    <label asp-for="Seller.DepartmentId" class="control-label"></label>
                    <select asp-for="Seller.DepartmentId" asp-items="@(new SelectList(Model.Departments,"Id","Name"))" class="form-control"></select>
                </div>
            </div>
            <div class="form-range btn-line-break">
                <input type="submit" class="btn btn-secondary" value="Create" />
            </div>

        </form>
    </div>
</div>

